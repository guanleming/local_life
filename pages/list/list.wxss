/* pages/list/list.wxss */
.max {
  width: 100%;
  height: 100%;
  background-color: #EFEFF4;
  box-sizing: border-box;
}
.cell_input{
  background-color: #EFEFF4;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cell_input input{
  background-color: #fff;
  width: 90%;
  height: 80%;
  text-align: center;
}
.list{
  background-color: #fff;
  display: flex;
  border-bottom: 2rpx solid rgb(221, 220, 220);
  padding: 30rpx 10rpx;
}

.list>image{
  width: 160rpx;
  height: 160rpx;
}
.list > .info{
  flex: 1;
  margin-left: 30rpx;

}

.info view:nth-of-type(1){
  font-size: 36rpx;
}
.info view:nth-of-type(2) {
  font-size: 28rpx;
  color: rgb(131, 127, 127);
}
.info view:nth-of-type(3) {
  font-size: 28rpx;
  color: rgb(131, 127, 127);
}

.info view:nth-of-type(4) {
  font-size: 32rpx;
